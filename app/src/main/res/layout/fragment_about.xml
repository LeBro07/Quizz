<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/aboutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:text="@string/about"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/headerSize" />

    <TextView
        android:id="@+id/aboutIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:gravity="center"
        android:text="@string/aboutIdea"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/normalSize" />

    <TextView
        android:id="@+id/aboutIdeaMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutIdea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:autoLink="email"
        android:gravity="center"
        android:text="@string/lenaMail"
        android:textSize="@dimen/smallSize" />

    <TextView
        android:id="@+id/aboutProg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutIdeaMail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:gravity="center"
        android:text="@string/aboutProg"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/normalSize" />

    <TextView
        android:id="@+id/aboutProgMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutProg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:autoLink="email"
        android:gravity="center"
        android:text="@string/floMail"
        android:textSize="@dimen/smallSize" />

    <TextView
        android:id="@+id/aboutFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aboutProgMail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:gravity="center"
        android:text="@string/feedback"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/smallSize" />

</RelativeLayout>