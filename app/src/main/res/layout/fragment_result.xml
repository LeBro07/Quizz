<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/resultDone"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:id="@+id/resultHeader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultTimeView"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/resultHeader"
        android:text="@string/timeResult"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bestTimeView"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/resultTimeView"
        android:text="@string/timeBest"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newBest"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/bestTimeView"
        android:text="@string/congratsTime"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        tools:visibility="visible"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultRight"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/newBest"
        android:text="@string/rightAns"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultWrong"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/resultRight"
        android:text="@string/wrongAns"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultAll"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/resultWrong"
        android:text="@string/allAns"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/allRight"
        android:textSize="24sp"
        android:textColor="@color/colorOnPrimary"
        android:layout_below="@id/resultAll"
        android:text="@string/congratsAns"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        tools:visibility="visible"/>

</RelativeLayout>