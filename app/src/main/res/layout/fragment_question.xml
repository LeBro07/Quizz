<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RadioGroup
        android:id="@+id/radioAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_alignStart="@+id/buttonQuit"
        android:layout_alignLeft="@+id/buttonQuit"
        android:layout_marginBottom="@dimen/spaceMargin"
        android:clickable="true"
        android:focusable="true">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="A"
            android:textSize="@dimen/smallSize" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="B"
            android:textSize="@dimen/smallSize" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="C"
            android:textSize="@dimen/smallSize" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="D"
            android:textSize="@dimen/smallSize" />

    </RadioGroup>

    <EditText
        android:id="@+id/answerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="85dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/textChoice"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/answerText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:clickable="false"
        android:ems="10"
        android:hint="@string/textChoice"
        android:inputType="none"
        android:textColor="#088C1E" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:layout_height="42dp"
        android:layout_alignTop="@id/buttonQuit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_button_primary"
        android:text="@string/buttonCheck"
        android:textColor="@color/colorOnSecondary"
        android:textSize="@dimen/normalSize" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonQuit"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_button_primary"
        android:text="@string/buttonQuit"
        android:textColor="@color/colorOnSecondary"
        android:textSize="@dimen/normalSize" />

    <TextView
        android:id="@+id/questionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:text="@string/textFillerQue"
        android:textColor="@color/colorOnPrimary"
        android:textSize="@dimen/normalSize" />

    <EditText
        android:id="@+id/answerNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="85dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/textChoice"
        android:inputType="number" />

    <EditText
        android:id="@+id/answerNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:autofillHints=""
        android:clickable="false"
        android:ems="10"
        android:hint="@string/textChoice"
        android:inputType="none"
        android:textColor="#088C1E" />

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/answerText"
        android:layout_below="@+id/questionView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:layout_marginBottom="@dimen/spaceMargin"
        android:contentDescription="@string/picDesc"
        app:src="@drawable/schulter" />

</RelativeLayout>
