<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/rulesHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textRules"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/spaceMargin"
        android:textSize="@dimen/headerSize"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:textColor="@color/colorOnPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rulesDesc"
        android:text="@string/description"
        android:layout_below="@id/rulesHeader"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="@dimen/extraSmallSize"
        android:layout_marginTop="@dimen/spaceMargin"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>